{
	"screenOutputDir": "target/screenshots",

	"loggerParser": 	  "%time\t%name\t: %type :\t%error",
	"loggerOutputDir":  "target/logs",
	"saveLog":	 	  true,
	"logStdout": 		  true,
	"logLevel": 		  ["ALL"],

	"bin":{
		"firefox":    null,
		"chrome":     null,
		"opera":      null,
		"msedge":     null

	},

	"webDriver":{

		"remoteHost":"127.0.0.1",
		"remotePort":4444,

		"gecko":{
			"argv":["-vv"],
			"bin":null,
			"logLevel":null
		},
		"chrome":{
			"argv":["--whitelisted-ips","--log-level=ALL"],
			"bin":null,
			"logLevel":"ALL"
		},
		"opera":{
			"argv":["--whitelisted-ips","--log-level=ALL"],
			"bin":null,
			"logLevel":"ALL"
		},
		"msedge":{
			"argv":["--whitelisted-ips"],
			"bin":null,
			"logLevel":null
		}
	}

}